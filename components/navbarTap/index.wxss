/* navigationBar.wxss */
page{
background: #F4F4F4;
}
.navigation-container {
  position: fixed;
  width: 100%;
  z-index: 99;
  top: 0;
  left: 0;
  background-color: #ffffff;
}

.navigation-buttons {
  height: 100rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 15rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.05);
  box-sizing: border-box;
  border-radius: 15rpx;
  background-color: transparent;
}

.nav-img {
  height: 32rpx;
  width: 25rpx;
  margin-top: 60rpx;
  margin-left: 30rpx;
}

.navigation-title {
  position: absolute;
  left: 104px;
  right: 104px;
  text-align: center;
  font-size: 16px;
  font-weight: bold;
  color: #000000;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.navigation-buttons text {
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #222222;
}

.withdraw {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #666666;
}

.navbar {
  height: 80rpx;
  display: flex;
  justify-content: center;
  text-align: center;
  width: 100%;
  background: #fff;
  z-index: 999;
}

.navbar .item {
  position: relative;
  width: 200rpx;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #666666;
}

.navbar .item.active {
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #222222;
}

.navbar .item.active:after {
  content: "";
  display: block;
  position: absolute;
  bottom: 20rpx;
  left: 0;
  right: 0;
  margin: auto;
  height: 6rpx;
  width: 68rpx;
  height: 10rpx;
  background: #FF1C6C;
  border-radius: 5rpx;
}


.list-option {
  width: 100%;
}

.option {
  width: 100%;
  height: 80rpx;
  margin: 0 auto;
  display: flex;
  align-items: center;
  margin-top: 1rpx;
  background: #ffffff;

}

.navtext1 {
  margin-left: 20rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #222222;

}

.more {
  width: 16rpx;
  height: 29rpx;
  position: absolute;
  right: 20rpx;
}