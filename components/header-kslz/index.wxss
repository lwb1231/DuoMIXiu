/* components/header-kslz/index.wxss */
.navigation-container {
  position: fixed;
  width: 100%;
  z-index: 99;
  top: 0;
  left: 0;
  background-color: #ffffff;
}
.navigation-bar {
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.navigation-buttons {
  height: 100rpx;
  width: 100%;
  display: flex;
  align-items: center;
  padding: 0 15rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.05);
  box-sizing: border-box;
  border-radius: 15rpx;
  background-color: transparent;
}
.nav-img{
  height: 32rpx;
  width: 25rpx;
}
.navigation-title {
  position: absolute;
  left: 104px;
  right: 104px;
  text-align: center;
  font-size: 16px;
  font-weight: bold;
  color: #000000;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.withdraw{
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #666666;
}
.add{
  display: flex;
  align-items: center;
}
.text{
font-size: 26rpx;
font-family: PingFang SC;
font-weight: bold;
color: #FEFEFE;
margin-left: 10rpx;
margin-right: 100rpx;
}
.Address{
  display: flex;
  justify-content: center;
  align-items: center;
margin-left: 20rpx;

}
.chahao{
  position: absolute;
  right: 30rpx;
}

.title{
  margin-top: 300rpx;
  padding: 0 80rpx;
  display: flex;
  align-items: center;
  position: relative;
}
.Add-video{
  width: 172rpx;
height: 172rpx;
background: rgba(255, 255, 255, .15);
border-radius: 10rpx;
display: flex;
justify-content: center;
align-items: center;
flex-direction: column;
}
.Add-video>image{
width: 60rpx;
height: 59rpx;
}
.Add-video>text{
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #FEFEFE;
  margin-top: 20rpx;
}

.video-title{
  display: flex;
  justify-content: space-evenly;
  flex-direction: column;
  margin-left: 10rpx;
}
.title_top{
font-size: 24rpx;
font-family: PingFang SC;
font-weight: 500;
color: #FEFEFE;
margin-bottom: 30rpx;
}
.title_bottom{
font-size: 32rpx;
font-family: PingFang SC;
font-weight: bold;
color: #FEFEFE;
}

.title_right{
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #FEFEFE;
  position: absolute;
  top: 0;
  right: 10rpx;
}


.Share{
  display: flex;
  align-items: center;
  margin-left: 10rpx;
  line-height: 60rpx;
  margin-top: 50rpx;
  padding: 0 80rpx;
}
.Share>text{
font-size: 24rpx;
font-family: PingFang SC;
font-weight: 500;
color: #FEFEFE;
}
.Share_img{
  width: 42rpx;
  height: 40rpx;
  margin-left: 40rpx;
}

.broadcast_top{
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 0 80rpx;
