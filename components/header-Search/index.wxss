/* components/header-Search/index.wxss */
page {
  height: 100%;
}

.top {
  width: 100%;
  background-color: #fff;
  margin-top: 1rpx;
}

.topsearch {
  width: 90%;
  margin-left: 5%;
  display: flex;
  padding: 2% 0;
  align-items: center;
}

.frame {
  background: #E7E7E7;
  width: 75%;
  border-radius: 20rpx;
  padding: 0 3%;
  display: flex;
  align-items: center;
  position: relative;
  margin-left: 30rpx;
}

.frame>input {
  font-size: 24rpx;
  margin: 6rpx 0;
  width: 80%;
  padding-left: 10rpx;
}

.topsearch>text {
  width: 10%;
  margin-left: 5%;
  color: #FF1C6C;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #666666;

}

.history {
  background-color: white;
  padding: 4%;
}

.history_title {
  height: 100rpx;
  font-size: 30rpx;
  display: flex;
  justify-content: space-between;
  color: #a8a7a7fa;
  align-items: center;
}

.history_text {
  padding: 4% 0;
  display: flex;
  flex-wrap: wrap;
}

.history_text>text {
  background-color: #f7f7f7;
  padding: 1% 3%;
  margin: 2%;
  border-radius: 40rpx;
  font-size: 30rpx;
}

.history_text>text:first-child {
  margin-left: 0;
}

.none {
  height: 200rpx;
  margin-top: 10%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.swiper_con {
  width: 96%;
  margin-left: 2%;
  display: flex;
  flex-wrap: wrap;
}

.swiper_con_view {
  width: 48%;
  height: 530rpx;
  background-color: white;
  margin: 10rpx 0;
}

.swiper_con_view:nth-child(even) {
  margin-left: 4%;
}

.swiper_con_view_view {
  margin-top: 5%;
  display: flex;
  align-items: center;
}

.frame_img {
  width: 23rpx;
  height: 23rpx;
}

.frame_img1 {
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  right: 20rpx;
}