/* pages/page-bianji/page-bianji.wxss */
.option{
  height: 125rpx;
  border-bottom: 1rpx solid #DEDEDE;
  display: flex;
  align-items: center;
}
.user-name{
  width: 125rpx;
  height: 125rpx;
  line-height: 125rpx;
  text-align: center;
}
.user-head{
  width: 76rpx;
height: 80rpx;
border-radius: 50%;
position: absolute;
right: 60rpx;
}
.user-more{
  width: 12rpx;
  height: 22rpx;
  position: absolute;
  right: 20rpx;
}
.user-text{
font-size: 28rpx;
font-family: PingFang SC;
font-weight: bold;
color: #222222;
position: absolute;
right: 60rpx;
}
.option:nth-last-of-type(1) .user-text{
  font-family: PingFang SC;
  font-weight: 500;
  color: #666666;
}