/* pages/page-yqjl/page-yqjl.wxss */

.shadow_bg {
  background: rgba(0, 0, 0, 0.5);
  width: 100vw;
  height: 100vh;
  position: fixed;
  z-index: 99;
  transition: 5s;
}

.bg-box {
  position: fixed;
  bottom: 0;
  width: 750rpx;
  height: 200rpx;
  background: #FFFFFF;
  padding: 0 20rpx;
}
.share{
font-size: 24rpx;
font-family: PingFang SC;
font-weight: 500;
color: #222222;
  margin-top: 20rpx;
}
.header_bag {
  width: 750rpx;
  height: 400rpx;
}

.header_img {
  width: 750rpx;
  height: 400rpx;
}

.Invitation-code {
  width: 702rpx;
  height: 281rpx;
  background: #FFFFFF;
  box-shadow: 0px 0px 32rpx 0px rgba(255, 28, 107, 0.4);
  border-radius: 40rpx;
  margin: 0 auto;
  position: relative;
  top: -100rpx;
}

.Invitation {
  height: 80rpx;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333333;
  line-height: 80rpx;
  text-align: center;
}


.code_num {
  display: flex;
  justify-content: center;
  align-items: center;
}

.figure {
  width: 73rpx;
  height: 73rpx;
  line-height: 73rpx;
  text-align: center;
  border: 2rpx solid #999999;
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333333;
  margin-top: 20rpx;
}

.duplication {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #666666;
  line-height: 53rpx;
  text-align: center;
  margin-top: 20rpx;
}


.navigation-container {
  position: fixed;
  width: 100%;
  z-index: 99;
  top: 0;
  left: 0;
  background-color: #ffffff;
}

.navigation-buttons {
  height: 100rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 15rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.05);
  box-sizing: border-box;
  border-radius: 15rpx;
  background-color: transparent;
}

.nav-img {
  height: 32rpx;
  width: 25rpx;
  margin-top: 60rpx;
  margin-left: 30rpx;
}

.navigation-title {
  position: absolute;
  left: 104px;
  right: 104px;
  text-align: center;
  font-size: 16px;
  font-weight: bold;
  color: #000000;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.navigation-buttons text {
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #222222;
}

.withdraw {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #666666;
}

.navbar {
  height: 80rpx;
  display: flex;
  justify-content: center;
  text-align: center;
  width: 100%;
  background: #fff;
  z-index: 999;
}

.navbar .item {
  position: relative;
  width: 200rpx;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #666666;
}

.navbar .item.active {
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #222222;
}

.navbar .item.active:after {
  content: "";
  display: block;
  position: absolute;
  bottom: 20rpx;
  left: 0;
  right: 0;
  margin: auto;
  height: 6rpx;
  width: 68rpx;
  height: 10rpx;
  background: #FF1C6C;
  border-radius: 5rpx;
}


.list-option {
  width: 100%;
}

.option {
  width: 100%;
  height: 80rpx;
  margin: 0 auto;
  display: flex;
  align-items: center;
  margin-top: 1rpx;
  background: #ffffff;

}

.navtext1 {
  margin-left: 20rpx;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
  line-height: 53rpx;
}

.more {
  width: 16rpx;
  height: 29rpx;
  position: absolute;
  right: 20rpx;
}

.option_num-one {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #666666;
  line-height: 53rpx;
  position: absolute;
  right: 60rpx;
}

.option:nth-last-of-type(1) .option_num-one {
  color: #FF1C6A;
}


.tips {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #999999;
  line-height: 48rpx;
  padding: 0 15rpx;
  margin-top: 50rpx;
}


.interlinkage{
  display: flex;
  align-items: center;
}
.interlinkage_1{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  margin-top: 20rpx;
  margin-left: 80rpx;
}
.interlinkage_img{
  width: 66rpx;
  height: 66rpx;
}
.interlinkage_text{
font-size: 20rpx;
font-family: PingFang SC;
font-weight: 500;
color: #222222;
margin-top: 10rpx;
}