page{
  width: 750rpx;
height: 887rpx;
background: #F4F4F4;
}
.detailed{
  height: 164rpx;
  background: #fff;
  padding: 0 20rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
  margin-top: 1rpx;
}
.detailed_top{
font-size: 30rpx;
font-family: PingFang SC;
font-weight: bold;
color: #333333;
}
.detailed_bottom{
font-size: 24rpx;
font-family: PingFang SC;
font-weight: 500;
color: #666666;
margin-top: 26rpx;
}
.Operation{
  height: 51rpx;
  background: #fff;
  padding: 0 20rpx;
  margin-top: 6rpx;
  display: flex;
  align-items: center;
}
.Operation image{
  width: 35rpx;
  height: 35rpx;
}
.Operation text{
font-size: 26rpx;
font-family: PingFang SC;
font-weight: 500;
color: #333333;
margin-right: 20rpx;
}
.Operation_one{
  display: flex;
  align-items: center;
}
.Operation_one image,.Operation_two image,.Operation_three image{
  margin-right: 10rpx;
  
}
.Operation_two{
  display: flex;
  align-items: center;
  position: absolute;
  right: 140rpx;
}
.Operation_three{
  display: flex;
  align-items: center;
  position: absolute;
  right: 20rpx;
}
.add{
  width: 750rpx;
height: 98rpx;
background: #FF1C6A;
display: flex;
align-items: center;
justify-content: center;
font-size: 30rpx;
font-family: PingFang SC;
font-weight: bold;
color: #FFFFFF;
position: absolute;
bottom: 0;
}
