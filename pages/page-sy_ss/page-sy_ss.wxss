page {
  height: 100%;

}

.close-attention {
  background: #fff;
  height: 80rpx;
  margin-top: 1rpx;
  display: flex;
  align-items: center;
  padding: 20rpx;
}

.attention_img {
  width: 81rpx;
  height: 81rpx;
  border-radius: 50%;

}



.attention_keep {
  width: 99rpx;
  height: 38rpx;
  line-height: 38rpx;
  text-align: center;
  border: 2rpx solid #FF1C6C;
  opacity: 0.6;
  border-radius: 19rpx;
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #FF1C6C;
  position: absolute;
  right: 30rpx;
}

.introduce {
  width: 85%;
  height: 30rpx;
  line-height: 30rpx;
  display: flex;
  align-items: center;
  position: relative;
  margin-left: 30rpx;
}

.personal-mess {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}

.change-mess {
  width: 24rpx;
  height: 24rpx;
  position: absolute;
  right: 0rpx;
}

.head-portrait {
  height: 89rpx;
  width: 89rpx;
  border-radius: 50%;
}

.user-vip {
  width: 90rpx;
  height: 32rpx;
  line-height: 32rpx;
  text-align: center;
  background: #FF1C6C;
  border-radius: 13rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  margin-left: 30rpx;
}

.gender {
  width: 20rpx;
  height: 20rpx;
  background: #E055FF;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.gender1 {
  width: 8rpx;
  height: 14rpx;
  color: #FFFFFF;

}

.song {
  width: 42rpx;
  height: 19rpx;
  background: linear-gradient(90deg, #F85486, #D31A53);
  border-radius: 10rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-left: 5rpx;
}

.song1 {
  width: 8rpx;
  height: 13rpx;
}

.dou {
  width: 42rpx;
  height: 19rpx;
  background: linear-gradient(90deg, #37FC9C, #00D4A1);
  border-radius: 10rpx;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  margin-left: 5rpx;
}

.dou1 {
  width: 9rpx;
  height: 11rpx;
}

.num {
  font-size: 16rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
}

.attention_nav_One {
  width: 130rpx;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333333;
}