/* pages/page-wdorder/page-wdorder.wxss */
page{  
  display: flex;  
  flex-direction: column;  
  height: 100%;  
background: #F4F4F4;
}  
.navbar{  
  flex: none;  
  display: flex;  
  background: #fff;  
  padding-bottom: 25rpx;
  margin-top: 5rpx;
}  
.navbar .item{  
  position: relative;  
  flex: auto;  
  text-align: center;  
  line-height: 80rpx;  
  font-size:14px;
  width: 83px;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #686868;
  line-height: 20px;
}  
/* 顶部导航字体颜色 */
.navbar .item.active{  
  color: #f0145a;  
  font-size: 28rpx;
}  
/* 顶部指示条属性 */
.navbar .item.active:after{  
  content: "";  
  display: block;  
  position: absolute;  
  bottom: -20rpx;  
  left: 50rpx;  
  right: 0;  
  width: 56rpx;
  height: 6rpx;
  background: #FF1C6C;
  border-radius: 3px;

} 
.commodity{
  height: 80rpx;
  background: #fff;  
  margin-top: 20rpx;
  padding: 0 40rpx;
}
.commodity_One,.commodity_two{
  width: 100%;
  height: 50%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.commodity_One text:first-child{
font-size: 28rpx;
font-family: PingFang SC;
font-weight: 500;
color: #333333;
line-height: 20rpx;
}
.commodity_One text:last-child{
font-size: 28rpx;
font-family: PingFang SC;
font-weight: 500;
color: #FF1C6C;
line-height: 20rpx;
}
.commodity_two text{
