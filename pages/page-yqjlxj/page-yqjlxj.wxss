.shadow_bg {
  background: rgba(0, 0, 0, 0.5);
  width: 100vw;
  height: 100vh;
  position: fixed;
  z-index: 99;
  transition: 5s;
}

.bg-box {
  position: fixed;
  bottom: 0;
  width: 750rpx;
  height: 200rpx;
  background: #FFFFFF;
  padding: 0 20rpx;
}
.share{
font-size: 24rpx;
font-family: PingFang SC;
font-weight: 500;
color: #222222;
  margin-top: 20rpx;
}
.header_bag {
  width: 750rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 100rpx;
}

.header_img {
  width: 300rpx;
  height: 300rpx;
}

.Invitation-code {
  width: 702rpx;
  height: 281rpx;
  background: #FFFFFF;
  box-shadow: 0px 0px 32rpx 0px rgba(255, 28, 107, 0.4);
  border-radius: 40rpx;
  margin: 0 auto;
  position: relative;
  top: -100rpx;
}

.Invitation {
  height: 80rpx;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333333;
  line-height: 80rpx;
  text-align: center;
}


